# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=****

# The following keys below are automatically created and
# added to your environment when you deploy on vercel

# Get your xAI API Key here for chat and image models: https://console.x.ai/
XAI_API_KEY=****

# Instructions to create a Vercel Blob Store here: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=****

# Instructions to create a PostgreSQL database here: https://vercel.com/docs/storage/vercel-postgres/quickstart
POSTGRES_URL=****


# Instructions to create a Redis store here:
# https://vercel.com/docs/redis
REDIS_URL=****

# OpenAI API for embeddings (required for search functionality)
OPENAI_API_KEY=****

# Embedding Configuration
AUTO_GENERATE_EMBEDDINGS=true          # Enable/disable automatic embedding generation
EMBEDDING_MODE=queue                   # Mode: 'realtime' | 'queue' | 'cron' | 'manual'
EMBEDDING_BATCH_SIZE=10               # Batch size for processing
EMBEDDING_PROCESSING_DELAY=100        # Delay between batches (ms)
EMBEDDING_ENABLE_RETRIES=true         # Enable retry logic
EMBEDDING_MAX_RETRIES=3               # Maximum retries

# Cron Job Settings (for scheduled processing)
ENABLE_EMBEDDING_CRON=false           # Enable cron job endpoint
CRON_SECRET=****                      # Secret for cron job authentication
